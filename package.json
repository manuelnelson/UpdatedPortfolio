{
  "name": "portfolio",
  "version": "0.0.1",
  "description": "Portfolio",
  "main": "dist",
  "scripts": {
    "watch:backend": "nodemon -w src/server --exec \"babel-node src/server --presets es2015,stage-0\"",
    "build:backend": "babel src/server --ignore client,webpack,public -s -D -d dist --presets es2015,stage-0",
    "build:dev": "webpack --env=dev --config ./src/webpack/webpack.dev.js",
    "build:prod": "webpack --env=prod --config ./src/webpack/webpack.prod.js",
    "dev": "webpack-dev-server --config ./src/webpack/webpack.dev.js",
    "start": "node dist",
    "prestart": "npm run -s build:backend",
    "test": "eslint src",
    "start:dev": "npm-run-all -p dev watch:backend"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuelnelson/portfolio.git"
  },
  "author": "Emmanuel Nelson <info@emmanuelnelson.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.3.0",
    "@angular/common": "^4.3.0",
    "@angular/compiler": "^4.3.0",
    "@angular/compiler-cli": "^4.3.0",
    "@angular/core": "^4.3.0",
    "@angular/forms": "^4.3.0",
    "@angular/http": "^4.3.0",
    "@angular/platform-browser": "^4.3.0",
    "@angular/platform-browser-dynamic": "^4.3.0",
    "@angular/platform-server": "^4.3.0",
    "@angular/router": "^4.3.0",
    "@types/node": "^7.0.12",
    "angular-calendar": "^0.18.3",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.7.1",
    "dotenv": "^4.0.0",
    "es6-shim": "^0.35.3",
    "express": "^4.13.3",
    "express-session": "^1.15.3",
    "express-validation": "^1.0.1",
    "express-winston": "^2.3.0",
    "helmet": "^3.4.1",
    "http-status": "^1.0.1",
    "joi": "^10.4.0",
    "jsonwebtoken": "^7.3.0",
    "keystone": "^4.0.0-beta.5",
    "mongoose": "^4.8.5",
    "morgan": "^1.8.0",
    "reflect-metadata": "^0.1.10",
    "resource-router-middleware": "^0.6.0",
    "rxjs": "^5.2.0",
    "typescript": "^2.4.1",
    "validator": "^7.0.0",
    "winston": "^2.3.1",
    "zone.js": "^0.8.12"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.23.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.2",
    "eslint": "^3.1.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.2",
    "node-sass": "^4.5.0",
    "nodemon": "^1.9.2",
    "npm-run-all": "^4.0.2",
    "parallelshell": "^2.0.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.2",
    "supertest": "^3.0.0",
    "ts-loader": "^2.0.1",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "typings": "^2.1.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0"
  },
  "homepage": "https://github.com/manuelnelson/node-angular-2-boilerplate#readme",
  "keywords": [
    "node",
    "angular",
    "2",
    "boilerplate"
  ]
}
